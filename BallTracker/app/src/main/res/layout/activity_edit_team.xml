<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="#ffffff"
        android:weightSum="3"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <Button
            android:id="@+id/edit_team_back_btn"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_margin="0dp"
            android:layout_gravity="left"
            android:background="@drawable/left_pointed_button"
            android:text="Teams"
            android:textAllCaps="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Edit Team"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textColor="#E4430A"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp"
        android:paddingStart="12dp"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team Name"/>

        <EditText
            android:id="@+id/edit_team_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notes"/>

        <EditText
            android:id="@+id/edit_team_notes_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="5"
            android:gravity="top|start"
            android:singleLine="false"
            android:hint="@string/notes"
            tools:ignore="Autofill" />
    </LinearLayout>

    <Button
        android:id="@+id/edit_team_delete_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Team" />

</LinearLayout>