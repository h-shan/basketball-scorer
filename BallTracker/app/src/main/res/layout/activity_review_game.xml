<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReviewGameActivity">

    <Button
        android:id="@+id/mainMenuBtn"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/left_pointed_button"
        android:text="@string/mainMenu"
        app:layout_constraintEnd_toStartOf="@+id/reviewGameTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reviewGameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:text="@string/review_games"
        app:layout_constraintStart_toEndOf="@+id/mainMenuBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/searchET"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/teamsLV"
        android:layout_marginTop="9dp"
        android:background="@drawable/bg_search"
        android:inputType="text"
        android:padding="10dp"
        android:text="Team"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainMenuBtn" />

    <ListView
        android:id="@+id/teamsLV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchET"
        android:layout_marginTop="8dp"
        android:dividerHeight="5dp"
        app:layout_constraintTop_toBottomOf="@+id/searchET" />


</android.support.constraint.ConstraintLayout>